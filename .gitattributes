# JSON
*.json linguist-detectable=true
*.json linguist-documentation=false
*.json linguist-language=JSON
*.json text eol=lf encoding=utf-8
# JSONC (JSON with Comments) 
*.jsonc linguist-detectable=true
*.jsonc linguist-documentation=false
*.jsonc linguist-language=JSON
*.jsonc text eol=lf encoding=utf-8

# YAML
*.yml linguist-detectable=true
*.yml linguist-language=YAML
*.yml text eol=lf encoding=utf-8
*.yaml linguist-detectable=true
*.yaml linguist-language=YAML
*.yaml text eol=lf encoding=utf-8

# TOML
*.toml linguist-detectable=true
*.toml linguist-language=TOML
*.toml text eol=lf encoding=utf-8

# Documents
*.md text eol=lf encoding=utf-8
*.txt text eol=lf encoding=utf-8

# Graphics
*.png binary
*.jpg binary
*.jpeg binary
*.webp binary
*.ico binary
*.gif binary

# Archive
*.7z binary
*.gz binary
*.tar binary
*.tgz binary
*.zip binary

# Scripts
*.bash      text eol=lf
*.fish      text eol=lf
*.sh        text eol=lf
*.zsh       text eol=lf
# These are windows-only files and should use crlf
*.bat       text eol=crlf
*.cmd       text eol=crlf
*.ps1       text eol=crlf
